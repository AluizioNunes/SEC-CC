{
  "dashboard": {
    "id": null,
    "title": "System Overview Dashboard",
    "tags": ["system", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Services Up",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(up)",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Services Down",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(up == 0)",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 3,
        "type": "stat",
        "title": "CPU Usage",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Memory Usage",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      }
    ]
  }
}